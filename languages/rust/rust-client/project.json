{
  "name": "rust-client",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "languages/rust/rust-client/src",
  "projectType": "library",
  "targets": {
    "cargo": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo",
        "cwd": "languages/rust/rust-client"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "inputs": [
        "{projectRoot}/src",
        "{projectRoot}/Cargo.lock",
        "{projectRoot}/Cargo.toml"
      ],
      "outputs": ["{projectRoot}/target"],
      "cache": false,
      "options": {
        "command": "cargo test --lib -- --nocapture",
        "cwd": "languages/rust/rust-client"
      }
    },
    "integration-test": {
      "executor": "nx:run-commands",
      "inputs": [
        "{projectRoot}/src",
        "{projectRoot}/Cargo.lock",
        "{projectRoot}/Cargo.toml",
        "{projectRoot}/tests"
      ],
      "cache": false,
      "options": {
        "command": "cargo test --test '*'",
        "cwd": "languages/rust/rust-client"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo publish",
        "cwd": "languages/rust/rust-client"
      }
    },
    "compile": {
      "executor": "nx:run-commands",
      "inputs": [
        "{projectRoot}/src/**/*.rs",
        "{projectRoot}/Cargo.toml",
        "{projectRoot}/Cargo.lock"
      ],
      "outputs": ["{projectRoot}/target"],
      "cache": false,
      "options": {
        "command": "cargo build",
        "cwd": "languages/rust/rust-client"
      }
    }
  },
  "tags": []
}
